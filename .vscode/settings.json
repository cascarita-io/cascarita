{
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Use prettier as default formatter
  "editor.formatOnPaste": true, // format code on paste
  "editor.formatOnType": true, // format code as you type
  "editor.formatOnSave": true, // format code when you hit save
  "files.trimTrailingWhitespace": true, // remove trailing white spaces from all lines
  "files.trimFinalNewlines": true, // Ens
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#aad5f3",
    "activityBar.background": "#aad5f3",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#e757ac",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#aad5f3",
    "statusBar.background": "#7dbfed",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#50a9e7",
    "statusBarItem.remoteBackground": "#7dbfed",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#7dbfed",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#7dbfed99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#7dbfed"
}
